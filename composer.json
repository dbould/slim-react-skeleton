{
    "name": "dbould/slim3-react-skeleton",
    "description": "A Slim Framework skeleton application, bootstrapped with React and Symfony Console",
    "keywords": ["microframework", "rest", "router", "psr7", "react", "symfony", "console"],

    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "symfony/console": "^3.4",
        "slim/slim": "^3.12",
        "monolog/monolog": "^1.24",
        "slim/views": "^0.1.3",
        "slim/php-view": "^2.2"
    },

    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },

    "autoload": {
        "psr-4": {
            "MyApp\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
